<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/destinationImage"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/destinationdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationImage"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="MULTI_DAY EXTENDED TOURS"
                android:textAlignment="textStart"
                android:textColor="#2979FF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/destinationDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationdetail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:text="Adventure short Trek to Panchase Hill"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startingAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationDesc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="83dp"
                android:fontFamily="sans-serif-thin"
                android:text="Starting at"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/destinationPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationDesc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="75dp"
                android:fontFamily="casual"
                android:text="$20"
                android:textAlignment="textStart"
                android:textColor="#76FF03"
                android:textSize="25sp" />

            <Button
                android:id="@+id/destinationBook"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationDesc"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="11dp"
                android:background="#2979FF"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Book Now"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/destinationNumber"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationImage"
                android:layout_marginStart="200dp"
                android:fontFamily="casual"
                android:text="#123EDGFT"
                android:textAlignment="textEnd"
                android:textColor="#00E676"
                android:textSize="14sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>